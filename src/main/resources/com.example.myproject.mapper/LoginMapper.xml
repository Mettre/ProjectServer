<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.myproject.mapper.LoginMapper">
    <cache eviction="LRU" flushInterval="60000" size="512" readOnly="true"/>
    <resultMap id="BaseResultMap" type="com.example.myproject.po.Users">
        <id column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="SMALLINT"/>
        <result column="sex" property="sex" jdbcType="SMALLINT"/>
        <result column="avatar" property="avatar" jdbcType="DATE"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
        <result column="type" property="type" jdbcType="SMALLINT"/>
        <result column="last_login" property="lastLogin" jdbcType="DATE"/>
        <result column="token" property="token" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="login" resultMap="BaseResultMap" parameterMap="java.lang.String">

        SELECT
        * FROM
        users
        WHERE
        phone=#{phone,jdbcType=VARCHAR}
        AND
         password=#{password,jdbcType=VARCHAR}
         LIMIT 1
    </select>
</mapper>